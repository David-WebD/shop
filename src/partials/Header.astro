<header class="header-wrapper">
  <div>
    <h2 class="title">Longforgan Newsagent and General Store</h2>
  </div>
  <nav class="nav-wrapper">
    <ul role="list">
      <li><a href="#aboutus">About Us</a></li>
      <li><a href="#contactus">Contact Us</a></li>
      <li><a href="#opening-times">Opening Times</a></li>

      <li><a href="#links">Useful Links</a></li>
    </ul>

    <div class="mobile-nav">
      <!-- Burger menu icon svg -->
      <!-- Svg in buttons with aria labels -->
      <nav class="mobile-nav-wrapper">
        <ul role="list">
          <li><a href="#aboutus">About Us</a></li>
          <li><a href="#contactus">Contact Us</a></li>
          <li><a href="#opening-times">Opening Times</a></li>
          <li><a href="#links">Useful Links</a></li>
        </ul>
      </nav>

      <button aria-label="Open menu" class="open-menu">
        <svg
          class="menu-icon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          height="30"
          width="30"
          stroke="#000"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M4 6h16M4 12h16M4 18h16"></path>
        </svg>
      </button>

      <!-- close menu svg X -->
      <button aria-label="Close menu" class="close-menu">
        <svg
          class="menu-icon"
          xmlns="http://www.w3.org/2000/svg"
          viewBox="0 0 24 24"
          fill="none"
          height="30"
          width="30"
          stroke="#000"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <path d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </button>
    </div>
  </nav>

  <style>
    header {
      display: flex;
      justify-content: space-between;
      width: 100%;
      align-items: center;
      padding: 1.5rem;
      position: fixed;
      top: 0;
      left: 0;
    }

    ul {
      font-size: 0.825rem;
      display: flex;
      justify-content: space-evenly;
      gap: 1.5rem;
      list-style: none;
    }

    .title {
      font-size: clamp(1rem, 2vw + 0.85rem, 1.5rem);
    }

    .nav-wrapper {
      display: flex;
      justify-content: center;
      align-items: center;
    }

    .mobile-nav {
      display: flex;
    }

    .mobile-nav > button {
      background: none;
      border: none;
    }

    .mobile-nav-wrapper {
      display: flex;
      flex-direction: column;
      position: absolute;
      top: 0;
      left: 0;
      height: var(--height, 0);
      overflow: hidden;
    }

    @property --height {
      syntax: "<length>";
      inherits: false;
      initial-value: "0";
    }

    .mobile-nav-wrapper.open {
      padding: 1.5rem;
      height: var(--height);
      transition: 200ms ease-in-out;
      width: 100%;
      z-index: 1000;
      background-color: #fff;
    }

    .mobile-nav-wrapper > ul {
      gap: 1rem;
      display: flex;
      flex-direction: column;
    }

    .close-menu,
    .open-menu {
      display: none;
    }

    .header-wrapper {
      background-color: #fff;
    }

    a {
      color: inherit;
      text-decoration: none;
    }

    a:is(:hover, :focus) {
      text-decoration: underline;
      color: blue;
    }

    a:is(:visited, :active) {
      color: purple;
    }

    @media (width < 1025px) {
      .nav-wrapper > ul {
        display: none;
      }

      .menu-icon {
        min-width: 30px;
        min-height: 30px;
      }

      .open-menu {
        display: block;
      }

      .open-menu.open {
        display: none;
      }

      .close-menu {
        display: none;
        z-index: 1001;
      }

      .close-menu.open {
        display: block;
      }
    }
  </style>
</header>

<script>
  const openMenuButton = document.querySelector(
    ".open-menu"
  ) as HTMLButtonElement;
  const closeMenuButton = document.querySelector(
    ".close-menu"
  ) as HTMLButtonElement;
  const mobileNavWrapper = document.querySelector(
    ".mobile-nav-wrapper"
  ) as HTMLButtonElement;

  openMenuButton.addEventListener("click", () => {
    openMenuButton.classList.add("open");
    closeMenuButton.classList.add("open");
    mobileNavWrapper.classList.add("open");
  });

  closeMenuButton.addEventListener("click", () => {
    openMenuButton.classList.remove("open");
    closeMenuButton.classList.remove("open");
    mobileNavWrapper.classList.remove("open");
  });
</script>
