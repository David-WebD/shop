---
import Styles from "../styles/style.css";
import Header from "../partials/Header.astro";
import Footer from "../partials/Footer.astro";
const { pageTitle } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content="Longforgan Newsagent and General Store" />
    <meta
      name="keywords"
      content="Longforgan, Newsagent, General Store, Post Office,Convenience Store, Local Shop, Lottery, Tobacco, Newspapers, Fresh Local Produce, Baked Goods."
    />
    <meta name="robots" content="index, follow" />
    <meta
      name="author"
      content="David Ewing. Web Developer. Glasgow, Scotland"
    />
    <meta
      name="copyright"
      content="David Ewing. Longforgan Newsagent and General Store"
    />
    <meta name="subject" content="Newsagent in Longforgan" />
    <meta
      property="og:title"
      content="Longforgan Newsagent and General Store"
    />
    <meta
      property="og:description"
      content="Longforgan Newsagent and General Store"
    />
    <meta property="og:image" content="/village-shop.jpg" />
    <meta property="og:type" content="website" />

    <title>{pageTitle}</title>
    <link rel="stylesheet" href={Styles} />
  </head>
  <body>
    <div class="default-layout">
      <h1 class="visually-hidden">{pageTitle}</h1>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>

<style is:global>
  .default-layout {
    display: grid;
    grid-template-rows: 1fr auto;
  }

  .visually-hidden {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: 0;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    border: 0;
  }
</style>
