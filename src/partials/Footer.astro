---
const { date = new Date().getFullYear() } = Astro.props;
---

<footer>
  <div class="footer-wrapper">
    <p>
      &copy; {date}. Copyright. All rights reserved. Longforgan Newsagent and
      General Store.
    </p>
    <p>
      Created by <a href="https://davidewing.co.uk" target="_blank"
        >David Ewing</a
      >
    </p>
    <p>Dedicated to the Longforgan Community.</p>
    <!-- up arrow html code -->
    <button
      aria-label="Scroll to top"
      onclick="window.scrollTo({top: 0, behavior: 'smooth'})"
    >
      <svg
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 24 24"
        fill="none"
        stroke="#fff"
        height="20"
        width="20"
        stroke-width="2"
        stroke-linecap="round"
        stroke-linejoin="round"
      >
        <path d="M12 19V6M5 12l7-7 7 7"></path>
      </svg>
    </button>
  </div>
</footer>

<style>
  .footer-wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1rem;
    font-size: 0.8rem;
    background-color: #fff;
    padding: 1rem;
    text-align: center;
  }

  button {
    background-color: #000;
    border-radius: 1000px;
    block-size: 30px;
    inline-size: 30px;
    border: none;
    cursor: pointer;
  }

  button {
    content: attr(aria-label) / " ";
  }

  @media (width < 1075px) {
    .footer-wrapper {
      flex-direction: column;
    }
  }
</style>

<script>
  // Prevent layout shift and smooth scroll if user prefers reduced motion
  const button = document.querySelector(
    "button[aria-label='Scroll to top']"
  ) as HTMLButtonElement;
  button.addEventListener("click", () => {
    const prefersReducedMotion = window.matchMedia(
      "(prefers-reduced-motion: reduce)"
    ).matches;
    window.scrollTo({
      top: 0,
      behavior: prefersReducedMotion ? "auto" : "smooth",
    });
  });
</script>
